Algoritmo "Cesta Basica"
Var
   precoAnterior, precoAtual: real
   variacao: real
Inicio
   escreva("Digite o preço anterior: ")
   leia(precoAnterior)
   escreva("Digite o preço atual: ")
   leia(precoAtual)
   
   se precoAnterior = 0 entao
      escreval("Preço anterior inválido.")
   senao
      variacao := ((precoAtual - precoAnterior) / precoAnterior) * 100
      escreval("Variação: ", variacao, "%")
      se variacao > 30 entao
         escreval("Aumento abusivo detectado!")
      fimse
   fimse
Fimalgoritmo
